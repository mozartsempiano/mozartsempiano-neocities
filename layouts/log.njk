<!DOCTYPE html>
<html lang="pt-br">
    <head>
        {% include "head.njk" ignore missing %}
        <link rel="stylesheet" href="/assets/css/log.css"/>
    </head>
    <body {% if site.crt %}class="crt"{% endif %}>
        <div>
            {% include "header.njk" ignore missing %}
            <main>
                {% if imgPrincipal %}
                    <figure>
                        <img src="{{ imgPrincipal }}" class="imgPrincipal" alt=""/>
                        {% if imgPrincipalCaption %}
                            <figcaption>{{ imgPrincipalCaption | renderMarkdownInline | safe }}</figcaption>
                        {% endif %}
                    </figure>
                {% endif %}
                <h1 id="tituloPagina">{{ title }}</h1>
                {% if subtitulo %}
                    <h2 id="subtitulo">{{ subtitulo | safe }}</h2>
                {% endif %}
                {% include "toc.njk" ignore missing %}
                {% for item in dataset %}
                    <div class="movie-log {% if item.review != '' %}with-review{% else %}compact{% endif %}">
                        {% if item.review != '' %}
                            {% tmdbPoster item.name,
                            item.year %}
                        {% endif %}
                        <div>
                            <div class="movie-header">
                                <span class="date">{{ item.when | formatDateTime }}</span>
                                <div class="entry-info">
                                    <span class="entry-title">{{ item.name }} ({{ item.year }})</span>
                                    {% if item.rating != '' %}
                                        <span class="rating">{{ item.rating }} ★</span>{% endif %}
                                    {% if item.rewatch != '' %}
                                        <span class="rewatch">↺</span>{% endif %}
                                </div>
                            </div>
                            {% if item.review != '' %}
                                <div class="movie-review">{{ item.review }}</div>
                            {% endif %}
                            {% if item.tags != '' %}
                                <span class="tags">{{ item.tags }}</span>{% endif %}
                        </div>
                    </div>
                {% endfor %}
                {{ content | safe }}
                {% if not noBacklinks %}
                    {% include "backlinks.njk" ignore missing %}
                {% endif %}
                {% include "postFooter.njk" ignore missing %}
            </main>
        </div>
        {% include "footer.njk" ignore missing %}
        {% include "scripts_bottom.njk" ignore missing %}
    </body>
</html>